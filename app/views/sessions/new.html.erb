<h1>Log in</h1> <br>

<%= form_for @user, url: login_path, method: :post do |f| %>
<p>
    <%= f.label :email %> <br>
    <%= f.text_field :email %>
</p> <br>
<p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
</p>
<%= f.submit "Log in" %></p>
<% end %> <br>

<% flash.each do |name, msg| %>
<%= msg %>
<% end %>

<p>Not a member? <%= link_to "Join us!", "/" %></p> <br>